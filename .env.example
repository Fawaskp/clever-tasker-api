# Django settings
DJANGO_SECRET_KEY=your_secret_key_here
DJANGO_DEBUG=True  # Set to False in production
ALLOWED_HOSTS=domain.com,api.domain.com  # Comma-separated without spaces
CORS_ALLOWED_ORIGINS=client1.com,client2.com  # Include protocol (http/https)

# Database settings
DEFAULT_DB_NAME=your_database_name
DEFAULT_DB_USER=your_database_user
DEFAULT_DB_PASSWORD=your_database_password
DEFAULT_DB_HOST=localhost  # Typically 'localhost' for local dev
DEFAULT_DB_PORT=5432  # Default PostgreSQL port

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.domain.com
EMAIL_PORT=587  # Typical for SMTP with STARTTLS
EMAIL_USE_TLS=True  # Set True for STARTTLS
EMAIL_USE_SSL=False  # Set False if using TLS
EMAIL_HOST_USER=example@domain.com
EMAIL_HOST_PASSWORD=your_email_password

# Static and Media files
STATIC_ROOT=/path/to/staticfiles  # Only required in production
MEDIA_ROOT=/path/to/mediafiles
